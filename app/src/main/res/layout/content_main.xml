<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:showDividers="middle"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hsv.freeadblockerbrowser.TestActivity"
    tools:showIn="@layout/test_activity_main">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/fb_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/send_invite_fb_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send invite with FB dialog" />

    <Button
        android:id="@+id/send_game_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Game Request" />

    <Button
        android:id="@+id/send_kiwi_quiet_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send quiet invite" />

</LinearLayout>
